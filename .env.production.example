# Production Environment Configuration
# IMPORTANT: Never commit this file with real values!

# Server Configuration
PORT=3000
NODE_ENV=production

# Supabase Configuration
# Get these from your Supabase project dashboard
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_ANON_KEY=

# Security - REQUIRED
# Generate strong secrets with: openssl rand -base64 32
# NEVER use default or weak values in production!
JWT_SECRET=
API_KEY_ENCRYPTION_KEY=

# Rate Limiting
# Adjust these based on your expected traffic
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
API_KEY_RATE_LIMIT_WINDOW_MS=3600000
API_KEY_RATE_LIMIT_MAX_REQUESTS=10

# Features
ENABLE_ANALYTICS_API=true
ENABLE_CONFIG_API=true

# CORS - REQUIRED
# Set to your web app domain(s), comma-separated
# Example: https://yourdomain.com,https://app.yourdomain.com
# NEVER use * in production!
CORS_ORIGIN=

# Logging
LOG_LEVEL=info

# Email Configuration
RESEND_API_KEY=
RESEND_FROM_EMAIL=
RESEND_FROM_NAME=
WEB_URL=

# OpenAI (Optional)
OPENAI_API_KEY=
