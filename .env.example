# Server Configuration
PORT=3000
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# Security - REQUIRED (No defaults allowed)
# Generate with: openssl rand -base64 32
# MUST be at least 32 characters, cryptographically random
JWT_SECRET=
API_KEY_ENCRYPTION_KEY=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Rate Limiting for API Key Creation (stricter)
API_KEY_RATE_LIMIT_WINDOW_MS=3600000
API_KEY_RATE_LIMIT_MAX_REQUESTS=10

# Features
ENABLE_ANALYTICS_API=true
ENABLE_CONFIG_API=true

# CORS - REQUIRED in production
# In production, set to your web app domain (e.g., https://yourdomain.com)
# In development, defaults to "*" for convenience
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info

# Resend Email Configuration
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=onboarding@yourdomain.com
RESEND_FROM_NAME=Your App
WEB_URL=http://localhost:3000
